<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>

<?import javafx.scene.control.ListView?>
<VBox fx:id="wrapper" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mythicalcreaturesoftware.splash.ui.LibraryView">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <AnchorPane fx:id="mainBar" prefHeight="23.0" prefWidth="790.0">
        <HBox alignment="CENTER_LEFT" layoutY="-29.0" prefHeight="25.0" prefWidth="800.0"
              AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
            <Label text="%window.title"/>
        </HBox>
        <HBox alignment="TOP_RIGHT" layoutX="576.0" layoutY="13.0" prefHeight="25.0" prefWidth="212.0"
              AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <Button fx:id="readerButton" mnemonicParsing="false" onMouseClicked="#readerAction"
                    text="%header.reader.text"/>
            <Separator orientation="VERTICAL" prefHeight="200.0">
                <HBox.margin>
                    <Insets left="30.0"/>
                </HBox.margin>
            </Separator>
            <Button fx:id="minimizeButton" mnemonicParsing="false" onMouseClicked="#minimizeAction">
                <graphic>
                    <MaterialDesignIconView glyphName="WINDOW_MINIMIZE" size="18px"/>
                </graphic>
            </Button>
            <Button fx:id="maximizeButton" mnemonicParsing="false" onMouseClicked="#maximizeAction">
                <graphic>
                    <MaterialDesignIconView glyphName="WINDOW_MAXIMIZE" size="18px"/>
                </graphic>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#closeAction">
                <graphic>
                    <MaterialDesignIconView glyphName="WINDOW_CLOSE" size="18px"/>
                </graphic>
            </Button>
        </HBox>
    </AnchorPane>
    <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </VBox.margin>
        <HBox GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
            <VBox HBox.hgrow="ALWAYS">
                <VBox>
                    <Label text="Scanned Folders">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </Label>
                    <ListView fx:id="scannedFoldersList" VBox.vgrow="NEVER" maxHeight="100" />
                    <HBox prefHeight="23.0" VBox.vgrow="NEVER">
                        <Button fx:id="addFolder" onMouseClicked="#addFolder" mnemonicParsing="false">
                            <graphic>
                                <MaterialDesignIconView glyphName="PLUS" size="24px"/>
                            </graphic>
                        </Button>
                        <Button fx:id="removeFolder" onAction="#removeFolder" mnemonicParsing="false">
                            <graphic>
                                <MaterialDesignIconView glyphName="MINUS" size="24px"/>
                            </graphic>
                        </Button>
                    </HBox>
                </VBox>
                <VBox VBox.vgrow="ALWAYS">
                    <Label text="Series">
                        <VBox.margin>
                            <Insets bottom="10.0"/>
                        </VBox.margin>
                    </Label>
                    <TreeView VBox.vgrow="ALWAYS"/>
                </VBox>
            </VBox>
            <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </HBox.margin>
            </Separator>
        </HBox>
        <VBox GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
            <Label text="Comics">
                <VBox.margin>
                    <Insets bottom="10.0"/>
                </VBox.margin>
            </Label>
            <TreeView VBox.vgrow="ALWAYS"/>
            <VBox VBox.vgrow="ALWAYS">
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
                <Label text="- Click on the &quot;+&quot; button to add a folder to scan"/>
                <Label text="- Recommended folder structure is:  "/>
                <Label text="- Click on an item to see his contents"/>
            </VBox>
        </VBox>
        <HBox GridPane.columnIndex="2" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS"
              GridPane.vgrow="ALWAYS">
            <Separator orientation="VERTICAL" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets left="5.0" right="5.0"/>
                </HBox.margin>
            </Separator>
            <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                <Label text="Information">
                    <VBox.margin>
                        <Insets bottom="10.0"/>
                    </VBox.margin>
                </Label>
                <TreeView VBox.vgrow="ALWAYS"/>
                <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                    <Label text="- Select a comic to see his information" VBox.vgrow="ALWAYS"/>
                </VBox>
            </VBox>
        </HBox>
    </GridPane>
    <AnchorPane>
        <HBox alignment="CENTER_LEFT" layoutX="14.0" layoutY="170.0" prefHeight="25.0" AnchorPane.bottomAnchor="5.0"
              AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
            <Label text="Label">
                <HBox.margin>
                    <Insets right="4.0"/>
                </HBox.margin>
            </Label>
        </HBox>
        <HBox alignment="CENTER_RIGHT" layoutX="749.0" layoutY="161.0" prefHeight="25.0"
              AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
            <Label text="Label">
                <HBox.margin>
                    <Insets right="4.0"/>
                </HBox.margin>
            </Label>
        </HBox>
    </AnchorPane>
</VBox>
